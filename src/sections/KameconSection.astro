<script>
  // Simple carousel auto-advance with visibility pausing
  document.addEventListener('DOMContentLoaded', () => {
    const track = document.querySelector('[data-kamecon-track]') as HTMLElement;
    const dotsContainer = document.querySelector('[data-kamecon-dots]') as HTMLElement;
    const section = document.querySelector('[data-kamecon-section]') as HTMLElement;
    if (!track || !dotsContainer || !section) return;

    const slides = track.querySelectorAll('.kamecon-carousel__slide');
    const totalSlides = slides.length;
    let currentIndex = 0;
    let isPaused = true; // Start paused until visible
    let intervalId: number | null = null;

    // Create dots
    for (let i = 0; i < totalSlides; i++) {
      const dot = document.createElement('button');
      dot.className = 'kamecon-carousel__dot' + (i === 0 ? ' active' : '');
      dot.addEventListener('click', () => goToSlide(i));
      dotsContainer.appendChild(dot);
    }

    const dots = dotsContainer.querySelectorAll('.kamecon-carousel__dot');

    function goToSlide(index: number) {
      currentIndex = index;
      track.style.transform = `translateX(-${index * 100}%)`;
      dots.forEach((dot, i) => {
        dot.classList.toggle('active', i === index);
      });
    }

    function startInterval() {
      if (intervalId) return;
      intervalId = window.setInterval(() => {
        if (!isPaused) {
          currentIndex = (currentIndex + 1) % totalSlides;
          goToSlide(currentIndex);
        }
      }, 4000);
    }

    function stopInterval() {
      if (intervalId) {
        clearInterval(intervalId);
        intervalId = null;
      }
    }

    // Use IntersectionObserver to pause when not visible
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            isPaused = false;
            startInterval();
          } else {
            isPaused = true;
            stopInterval();
          }
        });
      },
      { threshold: 0, rootMargin: '50px' }
    );

    observer.observe(section);

    // Also pause when tab is hidden
    document.addEventListener('visibilitychange', () => {
      if (document.hidden) {
        isPaused = true;
        stopInterval();
      } else {
        const rect = section.getBoundingClientRect();
        const inViewport = rect.top < window.innerHeight && rect.bottom > 0;
        if (inViewport) {
          isPaused = false;
          startInterval();
        }
      }
    });
  });
</script>

