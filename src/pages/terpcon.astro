<script>
  import gsap from 'gsap';

  // Page load slide-in animations
  function initPageAnimations() {
    const title = document.querySelector('[data-terpcon-title]');
    const subtitle = document.querySelector('[data-terpcon-subtitle]');
    const desc = document.querySelector('[data-terpcon-desc]');
    const cta = document.querySelector('[data-terpcon-cta]');
    const details = document.querySelectorAll('[data-terpcon-detail]');
    const vendorsHeader = document.querySelector('[data-terpcon-vendors-header]');
    const vendorsScroll = document.querySelector('[data-terpcon-vendors-scroll]');
    const featuredArtists = document.querySelector('[data-terpcon-featured-artists]');

    // Set initial states
    gsap.set(title, { y: 100, scale: 0.8, opacity: 0 });
    gsap.set(subtitle, { x: -100, opacity: 0 });
    gsap.set(desc, { x: -80, opacity: 0 });
    gsap.set(cta, { x: -60, opacity: 0 });
    gsap.set(details, { x: -50, opacity: 0 });
    gsap.set(vendorsHeader, { x: 100, opacity: 0 });
    gsap.set(vendorsScroll, { x: 100, opacity: 0 });
    gsap.set(featuredArtists, { y: 50, opacity: 0 });

    // Create timeline for staggered animations
    const tl = gsap.timeline({ defaults: { ease: 'power3.out' } });

    tl.to(title, { y: 0, scale: 1, opacity: 1, duration: 0.8 }, 0.1)
      .to(subtitle, { x: 0, opacity: 1, duration: 0.6 }, 0.3)
      .to(desc, { x: 0, opacity: 1, duration: 0.5 }, 0.4)
      .to(cta, { x: 0, opacity: 1, duration: 0.5 }, 0.5)
      .to(details, { x: 0, opacity: 1, duration: 0.5, stagger: 0.1 }, 0.5)
      .to(vendorsHeader, { x: 0, opacity: 1, duration: 0.6 }, 0.4)
      .to(vendorsScroll, { x: 0, opacity: 1, duration: 0.6 }, 0.5)
      .to(featuredArtists, { y: 0, opacity: 1, duration: 0.6 }, 0.6);

  }

  // Featured Artists Carousel
  function initFeaturedCarousel() {
    const carousel = document.querySelector('[data-featured-carousel]');
    if (!carousel) return;

    const items = carousel.querySelectorAll('[data-carousel-item]');
    if (items.length < 2) return;

    const totalItems = items.length;
    let currentPair = 0;
    let isPaused = false;
    let intervalId: number | null = null;

    function showPair(pairIndex: number, animate = true) {
      const leftIndex = (pairIndex * 2) % totalItems;
      const rightIndex = (pairIndex * 2 + 1) % totalItems;

      items.forEach((item, i) => {
        item.classList.remove('pos-left', 'pos-right', 'sliding-out-left', 'sliding-out-right', 'exited');

        if (i === leftIndex) {
          item.classList.add('pos-left');
        } else if (i === rightIndex) {
          item.classList.add('pos-right');
        } else {
          item.classList.add('exited');
        }
      });
    }

    function nextPair() {
      const oldLeftIndex = (currentPair * 2) % totalItems;
      const oldRightIndex = (currentPair * 2 + 1) % totalItems;

      items[oldLeftIndex]?.classList.add('sliding-out-left');
      items[oldRightIndex]?.classList.add('sliding-out-right');

      currentPair = (currentPair + 1) % Math.ceil(totalItems / 2);

      setTimeout(() => {
        showPair(currentPair, true);
      }, 300);
    }

    function startInterval() {
      if (intervalId) return;
      intervalId = window.setInterval(() => {
        if (!isPaused) nextPair();
      }, 4000);
    }

    function stopInterval() {
      if (intervalId) {
        clearInterval(intervalId);
        intervalId = null;
      }
    }

    // Initialize first pair
    showPair(0, false);

    // Use IntersectionObserver to pause when not visible
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            isPaused = false;
            startInterval();
          } else {
            isPaused = true;
            stopInterval();
          }
        });
      },
      { threshold: 0, rootMargin: '50px' }
    );

    observer.observe(carousel);

    // Pause when tab hidden
    document.addEventListener('visibilitychange', () => {
      if (document.hidden) {
        isPaused = true;
        stopInterval();
      } else {
        const rect = carousel.getBoundingClientRect();
        const inViewport = rect.top < window.innerHeight && rect.bottom > 0;
        if (inViewport) {
          isPaused = false;
          startInterval();
        }
      }
    });
  }

  // Initialize on DOM ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
      initPageAnimations();
      initFeaturedCarousel();
    });
  } else {
    initPageAnimations();
    initFeaturedCarousel();
  }
</script>

