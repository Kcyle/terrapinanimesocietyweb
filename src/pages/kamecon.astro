<script>
  import gsap from 'gsap';
  import { initMenuAnimations } from '../animations/menu';

  function initPageAnimations() {
    initMenuAnimations();
    const carousel = document.querySelector('[data-kamecon-carousel]');
    const title = document.querySelector('[data-kamecon-title]');
    const desc = document.querySelector('[data-kamecon-desc]');
    const buttons = document.querySelector('[data-kamecon-buttons]');
    const vendors = document.querySelector('[data-kamecon-vendors]');
    const turtle = document.querySelector('[data-kamecon-turtle]');

    gsap.set(carousel, { x: -100, opacity: 0 });
    gsap.set(title, { y: -100, opacity: 0 });
    gsap.set(desc, { y: 100, opacity: 0 });
    gsap.set(buttons, { y: 100, opacity: 0 });
    gsap.set(vendors, { x: 100, opacity: 0 });
    gsap.set(turtle, { x: 100, opacity: 0 });

    const tl = gsap.timeline({ defaults: { ease: 'power3.out' } });

    tl.to(carousel, { x: 0, opacity: 1, duration: 0.8 }, 0.1)
      .to(title, { y: 0, opacity: 1, duration: 0.7 }, 0.2)
      .to(desc, { y: 0, opacity: 1, duration: 0.6 }, 0.4)
      .to(buttons, { y: 0, opacity: 1, duration: 0.6 }, 0.5)
      .to(vendors, { x: 0, opacity: 1, duration: 0.7 }, 0.5)
      .to(turtle, { x: 0, opacity: 1, duration: 0.6 }, 0.6);

  }

  function initCarousel() {
    const track = document.querySelector('[data-kamecon-track]') as HTMLElement;
    const dotsContainer = document.querySelector('[data-kamecon-dots]') as HTMLElement;
    const carousel = document.querySelector('[data-kamecon-carousel]') as HTMLElement;
    if (!track || !dotsContainer || !carousel) return;

    const slides = track.querySelectorAll('.kamecon-carousel__slide');
    const totalSlides = slides.length;
    let currentIndex = 0;
    let isPaused = false;
    let intervalId: number | null = null;

    for (let i = 0; i < totalSlides; i++) {
      const dot = document.createElement('button');
      dot.className = 'kamecon-carousel__dot' + (i === 0 ? ' active' : '');
      dot.addEventListener('click', () => goToSlide(i));
      dotsContainer.appendChild(dot);
    }

    const dots = dotsContainer.querySelectorAll('.kamecon-carousel__dot');

    function goToSlide(index: number) {
      currentIndex = index;
      track.style.transform = `translateX(-${index * 100}%)`;
      dots.forEach((dot, i) => {
        dot.classList.toggle('active', i === index);
      });
    }

    function startInterval() {
      if (intervalId) return;
      intervalId = window.setInterval(() => {
        if (!isPaused) {
          currentIndex = (currentIndex + 1) % totalSlides;
          goToSlide(currentIndex);
        }
      }, 4000);
    }

    function stopInterval() {
      if (intervalId) {
        clearInterval(intervalId);
        intervalId = null;
      }
    }

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            isPaused = false;
            startInterval();
          } else {
            isPaused = true;
            stopInterval();
          }
        });
      },
      { threshold: 0, rootMargin: '50px' }
    );

    observer.observe(carousel);

    document.addEventListener('visibilitychange', () => {
      if (document.hidden) {
        isPaused = true;
        stopInterval();
      } else {
        const rect = carousel.getBoundingClientRect();
        const inViewport = rect.top < window.innerHeight && rect.bottom > 0;
        if (inViewport) {
          isPaused = false;
          startInterval();
        }
      }
    });
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
      initPageAnimations();
      initCarousel();
    });
  } else {
    initPageAnimations();
    initCarousel();
  }
</script>

