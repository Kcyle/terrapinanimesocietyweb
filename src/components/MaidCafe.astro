---
// Maid Cafe section
---

<!-- Maid Cafe Background - OUTSIDE maidcafe-content so it can slide independently -->
<div class="maidcafe__bg" data-maidcafe-bg></div>

<!-- Maid Cafe Content -->
<div class="maidcafe-content" data-maidcafe-content>
  <!-- Mascot - walks in from right side -->
  <div class="maidcafe__mascot" data-maidcafe-mascot>
    <img src="/images/Characters/maids.webp" alt="Maid Cafe mascot" class="maidcafe__mascot-image" />
  </div>

  <!-- Main content wrapper -->
  <div class="maidcafe__main">
    <!-- Main title -->
    <h1 class="maidcafe__hero-title">Maid Cafe</h1>

    <!-- Description section -->
    <div class="maidcafe__info">
      <p class="maidcafe__description">
        Experience our annual Maid Cafe event where members dress up and serve treats in a fun, anime-inspired atmosphere. Join us for delicious food, games, and entertainment!
      </p>
    </div>

    <!-- Event details -->
    <div class="maidcafe__details">
      <div class="maidcafe__detail-card">
        <span class="maidcafe__detail-label">When</span>
        <span class="maidcafe__detail-value">Spring Semester</span>
      </div>
      <div class="maidcafe__detail-card">
        <span class="maidcafe__detail-label">Where</span>
        <span class="maidcafe__detail-value">Stamp Student Union</span>
      </div>
      <div class="maidcafe__detail-card">
        <span class="maidcafe__detail-label">Activities</span>
        <span class="maidcafe__detail-value">Food, Games, Photos</span>
      </div>
    </div>

    <!-- CTA Button -->
    <div class="maidcafe__buttons">
      <a href="/subgroups" class="maidcafe__button maidcafe__button--primary">
        Learn More
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M5 12h14M12 5l7 7-7 7"/>
        </svg>
      </a>
    </div>
  </div>
</div>

<style>
  /* Maid Cafe Background - slides in from bottom */
  .maidcafe__bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100vh;
    pointer-events: none;
    z-index: 4;
    overflow: hidden;
    background: linear-gradient(135deg, #1a0a14 0%, #0a0a0a 50%, #0a1014 100%);
    will-change: transform;
    backface-visibility: hidden;
    transform: translateZ(0);
  }

  .maidcafe__bg::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image:
      radial-gradient(circle at 20% 80%, rgba(255, 182, 193, 0.08) 0%, transparent 50%),
      radial-gradient(circle at 80% 20%, rgba(255, 105, 180, 0.06) 0%, transparent 50%);
    pointer-events: none;
  }

  .maidcafe-content {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100vh;
    padding: var(--page-padding, 3rem);
    padding-top: 10vh;
    opacity: 0;
    pointer-events: none;
    overflow: hidden;
    z-index: 5;
    display: flex;
    flex-direction: column;
    will-change: transform, opacity;
    backface-visibility: hidden;
    transform: translateZ(0);
  }

  .maidcafe__mascot {
    position: absolute;
    right: 5%;
    bottom: 0;
    height: 100%;
    display: flex;
    align-items: flex-end;
    justify-content: flex-end;
    pointer-events: none;
    z-index: 2;
    will-change: transform;
    backface-visibility: hidden;
    transform: translateZ(0);
  }

  .maidcafe__mascot-image {
    height: 85%;
    width: auto;
    object-fit: contain;
    object-position: bottom center;
    filter: drop-shadow(0 10px 40px rgba(255, 105, 180, 0.3));
    will-change: transform;
    backface-visibility: hidden;
    transform: translateZ(0);
    contain: layout paint;
  }

  .maidcafe__main {
    position: relative;
    z-index: 5;
    display: flex;
    flex-direction: column;
    max-width: 600px;
    gap: 2rem;
  }

  .maidcafe__hero-title {
    font-family: 'Inter', sans-serif;
    font-size: 140px;
    font-weight: 800;
    color: #ffffff;
    text-align: left;
    margin: 0;
    letter-spacing: -0.04em;
    text-transform: uppercase;
    line-height: 0.9;
    text-shadow: 0 0 80px rgba(255, 105, 180, 0.3);
    will-change: transform;
    backface-visibility: hidden;
    contain: layout paint;
  }

  .maidcafe__info {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-top: 2rem;
  }

  .maidcafe__description {
    font-family: 'Inter', sans-serif;
    font-size: 18px;
    font-weight: 400;
    line-height: 1.8;
    color: rgba(255, 255, 255, 0.75);
    margin: 0;
  }

  .maidcafe__details {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    margin-top: 1rem;
  }

  .maidcafe__detail-card {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding: 1.25rem 1.5rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 182, 193, 0.2);
    border-radius: 12px;
    min-width: 140px;
  }

  .maidcafe__detail-label {
    font-family: 'Inter', sans-serif;
    font-size: 12px;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: rgba(255, 182, 193, 0.7);
  }

  .maidcafe__detail-value {
    font-family: 'Inter', sans-serif;
    font-size: 16px;
    font-weight: 600;
    color: #ffffff;
  }

  .maidcafe__buttons {
    display: flex;
    gap: 1rem;
    margin-top: 1.5rem;
  }

  .maidcafe__button {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 2rem;
    font-family: 'Inter', sans-serif;
    font-size: 14px;
    font-weight: 600;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    text-decoration: none;
    border-radius: 8px;
    transition: all 0.3s ease;
  }

  .maidcafe__button--primary {
    background: linear-gradient(135deg, #ff69b4 0%, #ff1493 100%);
    color: #ffffff;
    border: none;
  }

  .maidcafe__button--primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 32px rgba(255, 105, 180, 0.4);
  }

  @media (max-width: 1400px) {
    .maidcafe__hero-title {
      font-size: 100px;
    }
  }

  @media (max-width: 1000px) {
    .maidcafe__hero-title {
      font-size: 64px;
    }

    .maidcafe__details {
      flex-direction: column;
    }

    .maidcafe__detail-card {
      min-width: auto;
    }
  }

  @media (max-width: 768px) {
    .maidcafe-content {
      padding: 1.5rem;
      padding-top: calc(80px + 2vh);
    }

    .maidcafe__hero-title {
      font-size: 48px;
    }

    .maidcafe__description {
      font-size: 16px;
    }

    .maidcafe__mascot-image {
      height: 60%;
      opacity: 0.5;
    }
  }
</style>
