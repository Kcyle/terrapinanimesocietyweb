<div class="partners" data-partners-content>
  <div class="partners__bg" data-partners-bg></div>
  <div class="partners__container">
    <div class="partners__header" data-partners-header>
      <h2 class="partners__title">Our Partners</h2>
    </div>
    <div class="partners__sides" data-partners-trinity>
      <a href="https://terplink.umd.edu/organization/gaming" target="_blank" rel="noopener" class="partner partner--side partner--left" data-partner>
        <img class="partner__logo" src="/images/Icons/Gaming logo.png" alt="UMD Gaming" />
      </a>
      <a href="https://www.sonypictures.com/movies/anime" target="_blank" rel="noopener" class="partner partner--center" data-partner>
        <img class="partner__logo" src="/images/Artwork/Sony_Pictures_Inc._logo.svg.png" alt="Sony Pictures" />
      </a>
      <a href="https://terplink.umd.edu/organization/xr-club" target="_blank" rel="noopener" class="partner partner--side partner--right" data-partner>
        <img class="partner__logo" src="/images/Icons/xr (2).png" alt="XR Club" />
      </a>
    </div>
    <div class="partners__showcase" data-partners-showcase>
      <p class="showcase__headline">
        In partnership with <strong>Sony Pictures</strong>, our members receive <strong>completely free</strong> exclusive early access to theatrical anime screenings
      </p>
      <div class="showcase__theater">
        <div class="showcase__poster">
          <div class="showcase__poster-frame">
            <img src="/images/Photos/Demon Slayer.jpg" alt="Demon Slayer" />
          </div>
          <div class="showcase__poster-info">
            <span class="showcase__poster-title">Demon Slayer</span>
            <span class="showcase__poster-status">Screened</span>
          </div>
        </div>
        <div class="showcase__poster showcase__poster--featured">
          <div class="showcase__poster-frame">
            <img src="/images/Photos/reze.webp" alt="Chainsaw Man: Reze Arc" />
          </div>
          <div class="showcase__poster-info">
            <span class="showcase__poster-title">Chainsaw Man: Reze</span>
            <span class="showcase__poster-status">Screened</span>
          </div>
        </div>
        <div class="showcase__poster">
          <div class="showcase__poster-frame">
            <img src="/images/Photos/scarlet.webp" alt="Scarlet" />
          </div>
          <div class="showcase__poster-info">
            <span class="showcase__poster-title">Scarlet</span>
            <span class="showcase__poster-status showcase__poster-status--upcoming">Upcoming</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .partners {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    visibility: hidden;
    pointer-events: none;
    z-index: 35;
    overflow: hidden;
  }

  .partners__bg {
    position: absolute;
    inset: 0;
    background:
      linear-gradient(rgba(0, 0, 0, 0.85), rgba(0, 0, 0, 0.85)),
      url('/images/Artwork/partners.jpg') center/cover no-repeat;
    z-index: 0;
  }

  .partners__container {
    position: relative;
    z-index: 1;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 11.11vh 1.25vw 13.33vh;
    gap: 2.22vh;
  }

  .partners__header {
    text-align: center;
    margin-top: 5.93vh;
  }

  .partners__title {
    font-size: 4.17vw;
    font-weight: 800;
    color: #fff;
    letter-spacing: -0.03em;
    line-height: 1;
    text-transform: uppercase;
    text-shadow: 0 4px 40px rgba(0, 0, 0, 0.9), 0 2px 10px rgba(0, 0, 0, 0.7);
  }

  .partners__sides {
    position: relative;
    width: 100%;
    height: 33.33vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .partner {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.74vh;
    text-decoration: none;
    transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .partner:hover {
    transform: translateY(-0.59vh);
  }

  .partner__logo {
    height: auto;
    object-fit: contain;
    opacity: 0.9;
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .partner:hover .partner__logo {
    opacity: 1;
    transform: scale(1.05);
  }

  .partner__name {
    font-weight: 500;
    color: rgba(255, 255, 255, 0.55);
    letter-spacing: 0.03em;
    transition: color 0.4s ease;
  }

  .partner:hover .partner__name {
    color: rgba(255, 255, 255, 1);
  }

  .partner--side {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
  }

  .partner--side:hover {
    transform: translateY(calc(-50% - 0.59vh));
  }

  .partner--side .partner__logo {
    width: 22.92vw;
    max-height: 29.63vh;
    opacity: 1;
  }

  .partner--left {
    left: 2.08vw;
  }

  .partner--right {
    right: 0.83vw;
  }

  .partner--center .partner__logo {
    width: 16.67vw;
    max-height: 20.74vh;
    opacity: 0.85;
    filter: brightness(0) invert(1);
  }

  .partner--center .partner__name {
    font-size: 0.67vw;
    color: rgba(255, 255, 255, 0.5);
  }

  .partners__showcase {
    width: 100%;
    max-width: 41.67vw;
    text-align: center;
    margin-bottom: 3.7vh;
  }

  .showcase__headline {
    font-size: 0.83vw;
    color: rgba(255, 255, 255, 0.5);
    line-height: 1.6;
    margin-bottom: 2.22vh;
    max-width: 25vw;
    margin-left: auto;
    margin-right: auto;
  }

  .showcase__headline strong {
    color: rgba(255, 255, 255, 0.85);
    font-weight: 600;
  }

  .showcase__theater {
    display: flex;
    justify-content: center;
    align-items: flex-end;
    gap: 1.67vw;
  }

  .showcase__poster {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.74vh;
    transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .showcase__poster:hover {
    transform: translateY(-0.59vh);
  }

  .showcase__poster-frame {
    position: relative;
    width: 9.17vw;
    aspect-ratio: 2/3;
    border-radius: 0.33vw;
    overflow: hidden;
    background: #111;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .showcase__poster-frame::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      transparent 60%,
      rgba(0, 0, 0, 0.7) 100%
    );
    z-index: 1;
    pointer-events: none;
  }

  .showcase__poster-frame img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0.85;
    transition: all 0.5s ease;
  }

  .showcase__poster:hover .showcase__poster-frame img {
    opacity: 1;
    transform: scale(1.03);
  }

  .showcase__poster--featured .showcase__poster-frame {
    width: 11.67vw;
    border: 2px solid rgba(255, 255, 255, 0.15);
  }

  .showcase__poster-info {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.22vh;
  }

  .showcase__poster-title {
    font-size: 0.75vw;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.8);
    letter-spacing: 0.01em;
  }

  .showcase__poster-status {
    font-size: 0.54vw;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: rgba(255, 255, 255, 0.35);
  }

  .showcase__poster-status--upcoming {
    color: rgba(230, 57, 70, 0.9);
  }

  /* Tablets - structural layout change */
  @media (max-width: 1100px) {
    .partner--side {
      position: relative;
      top: auto;
      left: auto;
      right: auto;
      transform: none;
    }

    .partner--side:hover {
      transform: translateY(-8px);
    }

    .partners__sides {
      flex-direction: column;
      height: auto;
      gap: 2rem;
    }

    .partner--left,
    .partner--right {
      align-items: center;
    }

    .partner--side .partner__logo {
      width: 300px;
      max-height: 250px;
    }
  }

  /* Mobile - pixel values for readability */
  @media (max-width: 768px) {
    .partners__container {
      padding: 80px 1rem 100px;
      gap: 1.5rem;
    }

    .partners__header {
      margin-top: 40px;
    }

    .partners__title {
      font-size: 36px;
    }

    .partners__sides {
      gap: 1.5rem;
    }

    .partner {
      gap: 8px;
    }

    .partner--side .partner__logo {
      width: 200px;
      max-height: 160px;
    }

    .partner--center .partner__logo {
      width: 140px;
      max-height: 100px;
    }

    .partner--center .partner__name {
      font-size: 12px;
    }

    .partners__showcase {
      max-width: 100%;
      margin-bottom: 2rem;
    }

    .showcase__headline {
      font-size: 14px;
      max-width: 100%;
      margin-bottom: 1.5rem;
    }

    .showcase__theater {
      gap: 1rem;
    }

    .showcase__poster {
      gap: 8px;
    }

    .showcase__poster-frame {
      width: 100px;
      border-radius: 6px;
    }

    .showcase__poster--featured .showcase__poster-frame {
      width: 120px;
    }

    .showcase__poster-title {
      font-size: 12px;
    }

    .showcase__poster-status {
      font-size: 10px;
    }
  }

  @media (max-width: 480px) {
    .partners__container {
      padding: 60px 1rem;
      gap: 1rem;
    }

    .partners__sides {
      gap: 1rem;
    }

    .partner--side .partner__logo {
      width: 160px;
      max-height: 120px;
    }

    .partner--center {
      display: none;
    }

    .showcase__headline {
      font-size: 13px;
      margin-bottom: 1rem;
    }

    .showcase__theater {
      gap: 0.75rem;
    }

    .showcase__poster-frame {
      width: 80px;
    }

    .showcase__poster--featured .showcase__poster-frame {
      width: 100px;
    }

    .showcase__poster-title {
      font-size: 11px;
    }

    .showcase__poster-status {
      font-size: 9px;
    }
  }

  /* Large display media query removed - pure vw/vh units scale automatically */
</style>
