<script>
  // Anchor C.C. mascot to top right corner of the photo collage
  function anchorCCToCollage() {
    const mascotContainer = document.querySelector('.about-content__mascot-container') as HTMLElement;
    const mascotImg = document.querySelector('.about__mascot') as HTMLImageElement;

    if (!mascotContainer || !mascotImg) return;

    // Wait for image to load to get accurate height
    if (!mascotImg.complete) {
      mascotImg.addEventListener('load', anchorCCToCollage, { once: true });
      return;
    }

    // Get the mascot image height
    const mascotHeight = mascotImg.offsetHeight;

    // Position mascot so she sits on top of collage
    // 75% above collage, 25% overlapping
    mascotContainer.style.top = `${-(mascotHeight * 0.75)}px`;
  }

  // Run on load and resize
  if (typeof window !== 'undefined') {
    window.addEventListener('load', anchorCCToCollage);
    window.addEventListener('resize', anchorCCToCollage);

    // Also run immediately if DOM is ready
    if (document.readyState !== 'loading') {
      anchorCCToCollage();
    }
  }
</script>
