---
import screeningsData from '../data/screenings.json';
import umdBuildings from '../data/umd-buildings.json';
import { generateScreeningDates, formatScreeningDate } from '../utils/anime-api';

const { screenings, startDate, meetingTime, location } = screeningsData;
const dates = generateScreeningDates(startDate, screenings.length);

// Get building info
const building = umdBuildings.buildings.find(b => b.code === location.buildingCode) || umdBuildings.buildings[0];
const locationDisplay = `${building.shortName} ${location.roomNumber}`;

// Pair each screening with its date
const schedule = screenings.map((screening, index) => ({
  ...screening,
  date: dates[index],
  formattedDate: formatScreeningDate(dates[index]),
}));

---

<!-- Meetings Background - OUTSIDE meetings-content so it can slide independently -->
<!-- Images loaded via API to avoid duplicates and not use screening covers -->
<div class="meetings__bg-collage" data-meetings-bg>
  {Array.from({ length: 200 }).map((_, i) => (
    <div class="meetings__bg-cell" data-cell={i}></div>
  ))}
</div>

<!-- Meetings Content (hidden initially, slides in after About on scroll) -->
<div class="meetings-content" data-meetings-content>
  <!-- Punch mascot image - top right -->
  <div class="meetings__punch">
    <img src="/images/Characters/punch.webp" alt="Punch mascot" class="meetings__punch-image" />
  </div>

  <!-- Reze image - bottom left area, touching bottom -->
  <div class="meetings__reze">
    <img src="/images/Characters/Reze.webp" alt="Reze" class="meetings__reze-image" />
  </div>

  <!-- Main content wrapper - vertical layout -->
  <div class="meetings__main">
    <!-- Main title -->
    <h1 class="meetings__hero-title">Meetings</h1>

    <!-- Center: Big Screening Viewer -->
    <div class="meetings__screenings-section">
      <div class="meetings__section-header">
        <h2 class="meetings__section-title">This Week's Screening Options</h2>
        <p class="meetings__section-subtitle">During each meeting, we will select a episode from two different anime series to watch</p>
      </div>

      <!-- Large anime viewer with big arrows -->
      <div class="meetings__viewer" data-anime-viewer>
        <button class="meetings__arrow meetings__arrow--left" data-arrow-left aria-label="Previous anime">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
            <polyline points="15 18 9 12 15 6"></polyline>
          </svg>
        </button>

        <div class="meetings__anime-display">
          {schedule.map((anime, index) => (
            <div
              class={`meetings__anime-slide ${index === 0 ? 'meetings__anime-slide--active' : ''}`}
              data-slide={index}
              data-image={anime.image}
              data-title={anime.title}
              data-synopsis={anime.synopsis}
              data-episodes={anime.episodes || '?'}
              data-date={anime.formattedDate}
              data-score={anime.score || ''}
            >
              <div class="meetings__anime-poster">
                <img src={anime.image} alt={anime.title} loading="lazy" />
              </div>
              <div class="meetings__anime-details">
                <span class="meetings__anime-date">{anime.formattedDate}</span>
                <h3 class="meetings__anime-title">{anime.title}</h3>
                {anime.score && (
                  <span class="meetings__anime-score">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                      <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
                    </svg>
                    {anime.score}
                  </span>
                )}
                <div class="meetings__anime-meta">
                  <span class="meetings__anime-episodes">{anime.episodes || '?'} Episodes</span>
                </div>
                <p class="meetings__anime-synopsis">
                  {anime.synopsis.length > 280
                    ? anime.synopsis.substring(0, 280) + '...'
                    : anime.synopsis}
                </p>
              </div>
            </div>
          ))}
        </div>

        <button class="meetings__arrow meetings__arrow--right" data-arrow-right aria-label="Next anime">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
        </button>
      </div>

      <!-- Thumbnail preview bar -->
      <div class="meetings__thumbnails" data-thumbnails>
        {schedule.map((anime, index) => (
          <button
            class={`meetings__thumbnail ${index === 0 ? 'meetings__thumbnail--active' : ''}`}
            data-thumbnail={index}
            aria-label={`Go to ${anime.title}`}
          >
            <img src={anime.image} alt={anime.title} loading="lazy" />
          </button>
        ))}
      </div>
    </div>

    <!-- Below: Location (smaller, compact) -->
    <div class="meetings__location-section">
      <div class="meetings__location">
        <div class="meetings__location-image">
          <img src="/images/Photos/sociology.webp" alt="Parren J Mitchell Art-Sociology Building" />
        </div>
        <div class="meetings__location-info">
          <h3 class="meetings__location-name">PARREN J MITCHELL ART-SOCIOLOGY</h3>
          <p class="meetings__location-address">3834 Campus Dr, College Park, MD 20740</p>
          <div class="meetings__location-rooms">
            <div class="meetings__location-room">
              <span class="meetings__location-room-label">Regular Meetings</span>
              <span class="meetings__location-room-value">Room 3207 (Classroom)</span>
            </div>
            <div class="meetings__location-room">
              <span class="meetings__location-room-label">Special Events</span>
              <span class="meetings__location-room-value">Room 2203 (Lecture Hall)</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Scheduler Login Button -->
    <button id="adminLoginBtn" class="meetings__admin-btn" aria-label="Scheduler Login">
    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
      <line x1="16" y1="2" x2="16" y2="6"></line>
      <line x1="8" y1="2" x2="8" y2="6"></line>
      <line x1="3" y1="10" x2="21" y2="10"></line>
    </svg>
    <span>Scheduler</span>
    </button>
  </div>

  <!-- Login Modal -->
  <div id="loginModal" class="login-modal">
    <div class="login-modal__content">
      <button id="closeLoginModal" class="login-modal__close" aria-label="Close">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
      <h2 class="login-modal__title">Admin Login</h2>
      <p class="login-modal__subtitle">Enter password to access screening management</p>
      <form id="loginForm" class="login-modal__form">
        <div class="login-modal__field">
          <label for="adminPassword" class="login-modal__label">Password</label>
          <input
            type="password"
            id="adminPassword"
            name="password"
            class="login-modal__input"
            placeholder="Enter admin password"
            required
          />
        </div>
        <p id="loginError" class="login-modal__error"></p>
        <button type="submit" class="login-modal__submit">Login</button>
      </form>
    </div>
  </div>
</div>

<style>
  /* Meetings content - positioned absolutely like about-content */
  /* NO background-color here - let the __bg-collage div handle it */
  .meetings-content {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100vh;
    padding: clamp(1rem, 3vw, 3rem);
    padding-top: clamp(60px, 8vh, 10vh);
    padding-bottom: clamp(1rem, 2vh, 2rem);
    opacity: 0;
    visibility: hidden;
    pointer-events: none;
    overflow: hidden;
    z-index: 30;
    display: flex;
    flex-direction: column;
    will-change: transform, opacity;
    backface-visibility: hidden;
    transform: translateZ(0);
  }

  /* Background collage of anime covers - this slides in from bottom INDEPENDENTLY */
  /* Positioned outside meetings-content so it can animate from off-screen */
  .meetings__bg-collage {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    display: grid;
    /* auto-fill columns, CSS handles layout at any size */
    grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
    gap: 0;
    pointer-events: none;
    z-index: 25;
    overflow: hidden;
    visibility: visible;
    /* Match cell color so subpixel gaps are invisible */
    background-color: #1a1a1a;
    will-change: transform;
    backface-visibility: hidden;
    transform: translateZ(0);
  }

  /* Dark overlay that covers the anime cells - creates the darkened look */
  .meetings__bg-collage::before {
    content: '';
    position: absolute;
    inset: 0;
    background-color: rgba(10, 10, 10, 0.7);
    pointer-events: none;
    z-index: 2;
  }

  /* Radial gradient vignette on top */
  .meetings__bg-collage::after {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(ellipse 65% 65% at center,
      transparent 0%,
      transparent 35%,
      rgba(10, 10, 10, 0.1) 45%,
      rgba(10, 10, 10, 0.25) 55%,
      rgba(10, 10, 10, 0.45) 65%,
      rgba(10, 10, 10, 0.7) 80%,
      rgba(10, 10, 10, 0.9) 90%,
      #0a0a0a 100%);
    pointer-events: none;
    z-index: 3;
  }

  .meetings__bg-cell {
    /* 2:3 ratio cell - grid auto-fills columns, aspect-ratio sets height */
    position: relative;
    z-index: 1;
    width: calc(100% + 2px);
    aspect-ratio: 2 / 3;
    background-color: #1a1a1a;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    /* Overlap to eliminate all subpixel gaps */
    margin-right: -2px;
    margin-bottom: -2px;
  }

  /* Punch mascot - top right, scales with viewport */
  .meetings__punch {
    position: absolute;
    top: 0;
    right: clamp(1%, 5vw, 10%);
    z-index: 2;
    pointer-events: none;
  }

  .meetings__punch-image {
    height: clamp(200px, 50vw, 75vh);
    max-height: 800px;
    width: auto;
    object-fit: contain;
    object-position: top;
    opacity: clamp(0.4, 0.15vw + 0.5, 0.9);
  }

  /* Reze - bottom left area, touching bottom, scales with viewport */
  .meetings__reze {
    position: absolute;
    bottom: 0;
    left: clamp(1%, 5vw, 10%);
    z-index: 2;
    pointer-events: none;
  }

  .meetings__reze-image {
    height: clamp(250px, 55vw, 85vh);
    max-height: 900px;
    width: auto;
    object-fit: contain;
    object-position: bottom;
    opacity: clamp(0.4, 0.15vw + 0.5, 0.9);
  }

  /* Main Hero Title - responsive sizing */
  .meetings__hero-title {
    font-family: 'Inter', sans-serif;
    font-size: clamp(32px, 8vw, 100px);
    font-weight: 800;
    color: #ffffff;
    text-align: left;
    margin: 0;
    letter-spacing: -0.04em;
    text-transform: uppercase;
    line-height: 0.9;
    text-shadow: 0 4px 40px rgba(0, 0, 0, 0.9), 0 2px 10px rgba(0, 0, 0, 0.7);
  }

  /* Section Headers */
  .meetings__section-header {
    margin-bottom: clamp(0.5rem, 1vh, 1rem);
    text-align: center;
  }

  .meetings__section-title {
    font-family: 'Inter', sans-serif;
    font-size: clamp(18px, 2.5vw, 28px);
    font-weight: 700;
    color: #ffffff;
    margin: 0 0 0.25rem 0;
    letter-spacing: -0.02em;
  }

  .meetings__section-title--small {
    font-size: clamp(28px, 4vw, 48px);
    margin-bottom: 1.5rem;
    text-align: center;
  }

  .meetings__section-subtitle {
    font-family: 'Inter', sans-serif;
    font-size: clamp(11px, 1.3vw, 14px);
    font-weight: 400;
    color: rgba(255, 255, 255, 0.6);
    margin: 0;
  }

  /* Main content wrapper - vertical layout, must fit in viewport */
  .meetings__main {
    position: relative;
    z-index: 5;
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 1;
    min-height: 0;
    max-width: 1200px;
    margin: 0 auto;
    width: 100%;
    gap: clamp(0.5rem, 1.5vh, 1.5rem);
  }

  /* Screenings section - natural height, location sits right below */
  .meetings__screenings-section {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    min-height: 0;
    overflow: visible;
  }

  /* Location section - below screenings, anchored */
  .meetings__location-section {
    width: 100%;
    max-width: 800px;
    flex-shrink: 0;
  }

  /* Anime Viewer with arrows */
  .meetings__viewer {
    display: flex;
    align-items: center;
    gap: clamp(0.5rem, 1.5vw, 1.5rem);
    margin-bottom: clamp(0.5rem, 1vh, 1rem);
    width: 100%;
    max-width: 800px;
  }

  .meetings__arrow {
    flex-shrink: 0;
    width: clamp(40px, 5vw, 60px);
    height: clamp(40px, 5vw, 60px);
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.08);
    border: 2px solid rgba(255, 255, 255, 0.2);
    color: #ffffff;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .meetings__arrow:hover {
    background: rgba(255, 255, 255, 0.15);
    border-color: rgba(255, 255, 255, 0.4);
    transform: scale(1.08);
  }

  .meetings__arrow:active {
    transform: scale(0.95);
  }

  .meetings__anime-display {
    flex: 1;
    position: relative;
    min-height: 0;
  }

  .meetings__anime-slide {
    position: absolute;
    inset: 0;
    display: flex;
    gap: clamp(1rem, 2vw, 2rem);
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.4s ease, transform 0.4s ease;
    transform: translateX(20px);
    will-change: transform, opacity;
    backface-visibility: hidden;
    overflow: hidden;
  }

  .meetings__anime-slide--active {
    opacity: 1;
    pointer-events: auto;
    position: relative;
    transform: translateX(0);
  }

  .meetings__anime-poster {
    flex-shrink: 0;
    width: clamp(100px, 18vw, 220px);
    aspect-ratio: 2 / 3;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.5);
  }

  .meetings__anime-poster img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .meetings__anime-details {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .meetings__anime-date {
    font-family: 'Inter', sans-serif;
    font-size: clamp(10px, 1.2vw, 12px);
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: rgba(255, 255, 255, 0.5);
    margin-bottom: 0.5rem;
  }

  .meetings__anime-title {
    font-family: 'Inter', sans-serif;
    font-size: clamp(18px, 2.5vw, 28px);
    font-weight: 700;
    color: #ffffff;
    margin: 0 0 0.5rem 0;
    letter-spacing: -0.02em;
  }

  .meetings__anime-score {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    font-family: 'Inter', sans-serif;
    font-size: clamp(13px, 1.4vw, 15px);
    font-weight: 600;
    color: #fbbf24;
    margin-bottom: 0.5rem;
  }

  .meetings__anime-meta {
    margin-bottom: 0.75rem;
  }

  .meetings__anime-episodes {
    display: inline-block;
    padding: 0.35rem 0.75rem;
    font-family: 'Inter', sans-serif;
    font-size: clamp(10px, 1.1vw, 12px);
    font-weight: 600;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    color: rgba(255, 255, 255, 0.8);
    background-color: rgba(255, 255, 255, 0.1);
    border-radius: 6px;
  }

  .meetings__anime-synopsis {
    font-family: 'Inter', sans-serif;
    font-size: clamp(12px, 1.3vw, 14px);
    font-weight: 400;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.65);
    margin: 0;
    max-width: 400px;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
  }

  /* Thumbnail preview bar */
  .meetings__thumbnails {
    display: flex;
    justify-content: center;
    gap: clamp(0.4rem, 0.8vw, 0.75rem);
    padding-bottom: 0.5rem;
  }

  .meetings__thumbnail {
    width: clamp(40px, 4vw, 55px);
    aspect-ratio: 2 / 3;
    border-radius: 6px;
    overflow: hidden;
    border: 2px solid transparent;
    background: rgba(255, 255, 255, 0.1);
    cursor: pointer;
    transition: all 0.3s ease;
    padding: 0;
    opacity: 0.5;
  }

  .meetings__thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .meetings__thumbnail:hover {
    opacity: 0.8;
    transform: scale(1.05);
  }

  .meetings__thumbnail--active {
    opacity: 1;
    border-color: #ffffff;
    transform: scale(1.1);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.4);
  }

  /* Location Section - wide horizontal layout, anchored below screenings */
  .meetings__location {
    display: flex;
    align-items: stretch;
    background: rgba(255, 255, 255, 0.04);
    border: 1px solid rgba(255, 255, 255, 0.12);
    border-radius: 16px;
    overflow: hidden;
  }

  .meetings__location-image {
    flex-shrink: 0;
    width: clamp(140px, 22vw, 350px);
    position: relative;
    overflow: hidden;
  }

  .meetings__location-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    display: block;
  }

  .meetings__location-info {
    flex: 1;
    padding: clamp(0.75rem, 2vw, 2rem) clamp(1rem, 2.5vw, 2.5rem);
    display: flex;
    flex-direction: column;
    justify-content: center;
    min-width: 0;
  }

  .meetings__location-name {
    font-family: 'Inter', sans-serif;
    font-size: clamp(15px, 2.2vw, 24px);
    font-weight: 700;
    color: #ffffff;
    margin: 0 0 0.35rem 0;
    letter-spacing: 0.01em;
  }

  .meetings__location-address {
    font-family: 'Inter', sans-serif;
    font-size: clamp(12px, 1.4vw, 16px);
    font-weight: 400;
    color: rgba(255, 255, 255, 0.6);
    margin: 0 0 clamp(0.5rem, 1.5vh, 1.25rem) 0;
  }

  .meetings__location-rooms {
    display: flex;
    gap: clamp(0.5rem, 1vw, 1rem);
  }

  .meetings__location-room {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.3rem;
    padding: clamp(0.5rem, 1vw, 1rem) clamp(0.75rem, 1.2vw, 1.25rem);
    background: rgba(255, 255, 255, 0.05);
    border-radius: 10px;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .meetings__location-room-label {
    font-family: 'Inter', sans-serif;
    font-size: clamp(10px, 1.1vw, 12px);
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: rgba(255, 255, 255, 0.5);
  }

  .meetings__location-room-value {
    font-family: 'Inter', sans-serif;
    font-size: clamp(13px, 1.6vw, 18px);
    font-weight: 600;
    color: #ffffff;
  }

  /* Responsive - only structural changes, clamp() handles sizing */
  @media (max-width: 1000px) {
    .meetings__hero-title {
      text-align: center;
    }

    .meetings__anime-slide {
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    .meetings__anime-synopsis {
      max-width: 100%;
      -webkit-line-clamp: 3;
    }

    .meetings__location {
      flex-direction: column;
    }

    .meetings__location-image {
      width: 100%;
      border-right: none;
      border-bottom: 1px solid rgba(255, 255, 255, 0.08);
    }

    .meetings__location-rooms {
      flex-direction: column;
    }
  }

  @media (max-width: 768px) {
    .meetings__arrow svg {
      width: 20px;
      height: 20px;
    }

    .meetings__anime-synopsis {
      -webkit-line-clamp: 2;
    }

    .meetings__location-image {
      display: none;
    }
  }

  /* Extra-large displays (1440p / 4K) */
  @media (min-width: 2500px) {
    .meetings__bg-collage {
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    }

    .meetings__bg-cell {
      width: calc(100% + 4px);
      margin-right: -4px;
      margin-bottom: -4px;
    }

    .meetings__hero-title {
      font-size: clamp(100px, 6vw, 200px);
    }

    .meetings__section-title {
      font-size: clamp(28px, 2vw, 42px);
    }

    .meetings__section-subtitle {
      font-size: clamp(14px, 1vw, 20px);
    }

    .meetings__section-header {
      margin-bottom: clamp(1rem, 1.5vh, 2rem);
    }

    .meetings__viewer {
      max-width: 950px;
      gap: clamp(1rem, 1.5vw, 2rem);
    }

    .meetings__arrow {
      width: clamp(50px, 3vw, 70px);
      height: clamp(50px, 3vw, 70px);
    }

    .meetings__anime-poster {
      width: clamp(180px, 10vw, 280px);
    }

    .meetings__anime-title {
      font-size: clamp(28px, 2vw, 42px);
    }

    .meetings__anime-date {
      font-size: clamp(12px, 0.9vw, 18px);
    }

    .meetings__anime-score {
      font-size: clamp(15px, 1.1vw, 22px);
    }

    .meetings__anime-episodes {
      font-size: clamp(12px, 0.9vw, 18px);
      padding: 0.5rem 1rem;
    }

    .meetings__anime-synopsis {
      font-size: clamp(14px, 1vw, 20px);
      max-width: 600px;
      -webkit-line-clamp: 5;
    }

    .meetings__anime-meta {
      margin-bottom: 1rem;
    }

    .meetings__location-section {
      max-width: 950px;
    }

    .meetings__location-image {
      width: clamp(160px, 10vw, 280px);
