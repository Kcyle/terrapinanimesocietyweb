<script>
  // Load anime images into the static grid cells - CSS handles all layout
  (async function() {
    const cells = document.querySelectorAll('.meetings__bg-cell') as NodeListOf<HTMLElement>;
    if (cells.length === 0) return;

    try {
      // Fetch 4 pages for plenty of unique images
      const [res1, res2, res3, res4] = await Promise.all([
        fetch('https://api.jikan.moe/v4/top/anime?limit=25&page=1'),
        fetch('https://api.jikan.moe/v4/top/anime?limit=25&page=2'),
        fetch('https://api.jikan.moe/v4/top/anime?limit=25&page=3'),
        fetch('https://api.jikan.moe/v4/top/anime?limit=25&page=4')
      ]);
      const [json1, json2, json3, json4] = await Promise.all([
        res1.json(), res2.json(), res3.json(), res4.json()
      ]);

      const extractImages = (json: any) => json.data
        ?.map((a: any) => a.images?.jpg?.large_image_url || a.images?.jpg?.image_url)
        .filter(Boolean) || [];

      const allImages = [
        ...extractImages(json1), ...extractImages(json2),
        ...extractImages(json3), ...extractImages(json4)
      ];
      const uniqueImages = [...new Set(allImages)];
      if (uniqueImages.length === 0) return;

      // Shuffle for variety
      const shuffled = [...uniqueImages].sort(() => Math.random() - 0.5);

      // Apply images - cycle through if more cells than images
      cells.forEach((cell, i) => {
        cell.style.backgroundImage = `url(${shuffled[i % shuffled.length]})`;
      });
    } catch (e) {
      console.error('Failed to load anime background images:', e);
    }
  })();

  // Anime slider navigation
  (function() {
    const slides = document.querySelectorAll('.meetings__anime-slide') as NodeListOf<HTMLElement>;
    const thumbnails = document.querySelectorAll('.meetings__thumbnail') as NodeListOf<HTMLElement>;
    const leftArrow = document.querySelector('[data-arrow-left]') as HTMLElement;
    const rightArrow = document.querySelector('[data-arrow-right]') as HTMLElement;

    if (slides.length === 0) return;

    let currentIndex = 0;
    const totalSlides = slides.length;

    function goToSlide(index: number) {
      // Handle wrapping
      if (index < 0) index = totalSlides - 1;
      if (index >= totalSlides) index = 0;

      // Update slides
      slides.forEach((slide, i) => {
        slide.classList.remove('meetings__anime-slide--active');
        if (i === index) {
          slide.classList.add('meetings__anime-slide--active');
        }
      });

      // Update thumbnails
      thumbnails.forEach((thumb, i) => {
        thumb.classList.remove('meetings__thumbnail--active');
        if (i === index) {
          thumb.classList.add('meetings__thumbnail--active');
        }
      });

      currentIndex = index;
    }

    // Arrow click handlers
    if (leftArrow) {
      leftArrow.addEventListener('click', () => {
        goToSlide(currentIndex - 1);
      });
    }

    if (rightArrow) {
      rightArrow.addEventListener('click', () => {
        goToSlide(currentIndex + 1);
      });
    }

    // Thumbnail click handlers
    thumbnails.forEach((thumb, i) => {
      thumb.addEventListener('click', () => {
        goToSlide(i);
      });
    });

    // Keyboard navigation
    document.addEventListener('keydown', (e) => {
      if (e.key === 'ArrowLeft') {
        goToSlide(currentIndex - 1);
      } else if (e.key === 'ArrowRight') {
        goToSlide(currentIndex + 1);
      }
    });
  })();

  // Login Modal initialization
  (function() {
    const ADMIN_PASSWORD = 'animeclubadmin';

    const loginBtn = document.getElementById('adminLoginBtn');
    const loginModal = document.getElementById('loginModal');
    const closeLoginBtn = document.getElementById('closeLoginModal');
    const loginForm = document.getElementById('loginForm') as HTMLFormElement;
    const passwordInput = document.getElementById('adminPassword') as HTMLInputElement;
    const errorEl = document.getElementById('loginError');

    if (!loginBtn || !loginModal || !loginForm) return;

    // Check if already logged in
    if (sessionStorage.getItem('adminLoggedIn') === 'true') {
      document.body.classList.add('admin-mode');
    }

    // Open modal
    loginBtn.addEventListener('click', () => {
      loginModal.classList.add('active');
      passwordInput?.focus();
    });

    // Close modal
    closeLoginBtn?.addEventListener('click', () => {
      loginModal.classList.remove('active');
      if (errorEl) errorEl.textContent = '';
      if (passwordInput) passwordInput.value = '';
    });

    // Close on backdrop click
    loginModal.addEventListener('click', (e) => {
      if (e.target === loginModal) {
        loginModal.classList.remove('active');
        if (errorEl) errorEl.textContent = '';
        if (passwordInput) passwordInput.value = '';
      }
    });

    // Close on escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && loginModal.classList.contains('active')) {
        loginModal.classList.remove('active');
        if (errorEl) errorEl.textContent = '';
        if (passwordInput) passwordInput.value = '';
      }
    });

    // Handle form submission
    loginForm.addEventListener('submit', (e) => {
      e.preventDefault();
      const password = passwordInput?.value;

      if (password === ADMIN_PASSWORD) {
        // Success - store login state and redirect to admin page
        sessionStorage.setItem('adminLoggedIn', 'true');
        window.location.href = '/admin/screenings';
      } else {
        // Error
        if (errorEl) errorEl.textContent = 'Incorrect password';
        passwordInput?.focus();
        passwordInput?.select();
      }
    });
  })();
</script>
