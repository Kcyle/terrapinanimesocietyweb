---
interface Props {
  size?: number;
  class?: string;
  direction?: 'up' | 'down' | 'left' | 'right';
}

const { size = 24, class: className = '', direction = 'right' } = Astro.props;

const rotations = {
  up: '-90',
  down: '90',
  left: '180',
  right: '0'
};

const rotation = rotations[direction];
---

<svg
  class={className}
  width={size}
  height={size}
  viewBox="0 0 24 24"
  fill="none"
  stroke="currentColor"
  stroke-width="2"
  stroke-linecap="round"
  stroke-linejoin="round"
  style={`transform: rotate(${rotation}deg)`}
  aria-hidden="true"
>
  <line x1="5" y1="12" x2="19" y2="12" />
  <polyline points="12 5 19 12 12 19" />
</svg>
